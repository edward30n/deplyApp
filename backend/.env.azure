# Configuración para Azure (producción)
ENV=azure

# Database (Azure PostgreSQL - usar Key Vault en producción)
DATABASE_URI=@Microsoft.KeyVault(SecretUri=https://recway-vault.vault.azure.net/secrets/recway-db-uri/)
# Configuraciones individuales de PostgreSQL si se necesitan
# POSTGRES_USER=@Microsoft.KeyVault(SecretUri=https://recway-vault.vault.azure.net/secrets/postgres-user/)
# POSTGRES_PASSWORD=@Microsoft.KeyVault(SecretUri=https://recway-vault.vault.azure.net/secrets/postgres-password/)
# POSTGRES_HOST=recway-postgres.postgres.database.azure.com
# POSTGRES_PORT=5432
# POSTGRES_DB=recway_db

# URLs (reemplazar con URLs reales de Azure)
FRONTEND_URL=https://recway-frontend.azurestaticapps.net
BASE_URL=https://recway-api.azurewebsites.net

# Server Configuration (Azure App Service)
HOST=0.0.0.0
# PORT se obtiene automáticamente de WEBSITES_PORT en Azure
USE_PROXY_HEADERS=true

# File Watcher (deshabilitado en Azure)
ENABLE_FILE_WATCHER=false

# Storage (Azure Blob)
USE_AZURE_STORAGE=true
AZURE_STORAGE_CONNECTION_STRING=@Microsoft.KeyVault(SecretUri=https://recway-vault.vault.azure.net/secrets/recway-storage-conn/)

# Email Configuration (producción)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=@Microsoft.KeyVault(SecretUri=https://recway-vault.vault.azure.net/secrets/smtp-username/)
SMTP_PASSWORD=@Microsoft.KeyVault(SecretUri=https://recway-vault.vault.azure.net/secrets/smtp-password/)
EMAIL_FROM=noreply@recway.com
EMAIL_FROM_NAME=RecWay

# Security Configuration (CRÍTICAS para Azure)
SECRET_KEY=@Microsoft.KeyVault(SecretUri=https://recway-vault.vault.azure.net/secrets/recway-secret-key/)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 horas en producción (más seguro)
REFRESH_TOKEN_EXPIRE_DAYS=7       # 7 días en producción (más seguro)

# API Configuration
PROJECT_NAME=RecWay
API_V1_STR=/api/v1
ENVIRONMENT=production

# CORS Configuration (URLs reales de Azure - SOLO dominios autorizados)
CORS_ORIGINS=["https://recway-frontend.azurestaticapps.net"]

# Logging (producción)
LOG_LEVEL=INFO

# Azure Specific (opcional)
# APPLICATIONINSIGHTS_CONNECTION_STRING=@Microsoft.KeyVault(SecretUri=https://recway-vault.vault.azure.net/secrets/app-insights-conn/)